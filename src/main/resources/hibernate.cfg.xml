<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/nscdb</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="show_sql">true</property>
        <mapping class="Entity.UserEntity"/>
        <mapping resource="UserEntity.hbm.xml"/>
        <mapping class="Entity.HostEntity"/>
        <mapping resource="HostEntity.hbm.xml"/>
        <mapping class="Entity.notificationProviders.EmailProviderEntity"/>
        <mapping resource="EmailProviderEntity.hbm.xml"/>
        <mapping class="Entity.notificationProviders.SmsProviderEntity"/>
        <mapping resource="SmsProviderEntity.hbm.xml"/>
        <mapping resource="UserEntity.hbm.xml"/>
        <mapping class="Entity.SettingEntity"/>
        <mapping resource="SettingEntity.hbm.xml"/>
        <mapping resource="HostEntity.hbm.xml"/>
        <mapping resource="HostEntity.hbm.xml"/>
        <mapping resource="HostEntity.hbm.xml"/>
    </session-factory>
</hibernate-configuration>